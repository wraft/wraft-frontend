    "@remirror/styles": "^2.0.7",
    "@remirror/theme": "^2.0.9",
    "immer": "^10.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remirror": "^2.0.38"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.3",
    "@floating-ui/react": "^0.26.5",
    "@seznam/compose-react-refs": "^1.0.6",
    "escape-string-regexp": "^4.0.0"
  }
}
